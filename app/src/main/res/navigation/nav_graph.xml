<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.neformat.ui.FavoritesFragment"
        android:label="Избранное"
        tools:layout="@layout/fragment_favorites">

        <!-- Добавленный переход -->
        <action
            android:id="@+id/action_favoritesFragment_to_imageDetailFragment"
            app:destination="@id/imageDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.neformat.ui.ProfileFragment"
        android:label="Профиль" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.neformat.ui.HomeFragment"
        android:label="Главная"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_imageDetailFragment"
            app:destination="@id/imageDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/imageDetailFragment"
        android:name="com.example.neformat.ui.ImageDetailFragment"
        android:label="Image Detail">

        <action
            android:id="@+id/action_imageDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <!-- Добавим возврат и в favorites для consistency -->
        <action
            android:id="@+id/action_imageDetailFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
    </fragment>
</navigation>